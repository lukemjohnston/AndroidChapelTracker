<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:id="@+id/parent_layout">

    <TextView
        android:id="@+id/chapel_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="64dp"
        android:layout_toRightOf="@id/chapel_time"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@id/chapel_time"
        android:text="Singsporation"
        android:textColor="#000"
        android:textSize="17dp">

    </TextView>

    <TextView
        android:id="@+id/chapel_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="8:00 pm"
        />

    <TextView
        android:id="@+id/chapel_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chase Gymnasium"
        android:layout_alignLeft="@id/chapel_title"
        android:layout_alignTop="@id/chapel_title"
        android:layout_marginTop="16dp"/>


</RelativeLayout>